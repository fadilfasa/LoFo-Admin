<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/img_barangTemuan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lofo"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"/>

    <!-- Data -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Username -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/uploader"
                android:text="Uploader"
                android:textStyle="bold"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/uploaderTemuan_value"
                android:text="User123"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Nama -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/nama"
                android:text="Nama"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/namaBarangTemuan_value"
                android:text="user123"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Kategori -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/kategori"
                android:text="Kategori"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kategori_value"
                android:text="Perhiasan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- TGL Hilang -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tgl_hilang"
                android:text="Tanggal Kehilangan"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tgl_temuan_value"
                android:text="12/12/2025"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Tempat Hilang -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/lokasi"
                android:text="Lokasi Hilang"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lokasiTemuan_value"
                android:text="jalan raya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- kab/kota -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/kab_kota"
                android:text="Kab/Kota"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kab_kota_value"
                android:text="Lombok Timur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_phone"
                android:text="Nomor HP"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phone_value"
                android:text="08123456789"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- detail informasi -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/detail"
                android:text="Detail"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_value"
                android:text="ahajdgajadggdsakgjhgsdjhgajsgdjshgdjasgdjsgjgdjsgdjsgjgdjgajgdjsgdjhgsajdhgsjgdjsgajsgdjagsh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Terima"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Tolak"
                android:textAlignment="center"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_toEndOf="@id/btn_edit"
                android:layout_marginBottom="1dp"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
