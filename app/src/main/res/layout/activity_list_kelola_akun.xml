<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lofo"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"/>

    <!-- Data -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Username -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_username"
                android:text="Username"
                android:textStyle="bold"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_username_value"
                android:text="User123"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_email"
                android:text="Email"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_email_value"
                android:text="user123@mail.com"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Full Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_full_name"
                android:text="Nama Lengkap"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_full_name_value"
                android:text="John Doe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Gender -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_gender"
                android:text="Jenis Kelamin"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_gender_value"
                android:text="Laki-laki"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_address"
                android:text="Alamat"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_address_value"
                android:text="Jl. Raya No. 10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/listDivider"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_phone"
                android:text="Nomor HP"
                android:layout_width="135dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phone_value"
                android:text="08123456789"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Ubah"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Hapus"
                android:textAlignment="center"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_toEndOf="@id/btn_edit"
                android:layout_marginBottom="1dp"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
